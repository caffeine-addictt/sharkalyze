# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
indent_style = space
quote_type = single

# Python
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

# Rust
[*.rs]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
